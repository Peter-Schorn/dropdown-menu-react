{
    "name": "dropdown-menu",
    "version": "1.0.0",
    "description": "Components for creating a nested dropdown menu in react.",
    "keywords": [
        "react"
    ],
    "license": "ISC",
    "author": "Peter Schorn",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "sideEffects": [
        "*.css"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./loglevel": {
            "import": "./dist/loglevel.js",
            "types": "./dist/loglevel.d.ts"
        },
        "./index.css": "./dist/index.css"
    },
    "scripts": {
        "build": "tsc -b && vite build",
        "dev": "vite build --watch",
        "lint": "eslint .",
        "clean-build": "rm -rf dist && npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Peter-Schorn/dropdown-menu-react.git"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18",
        "loglevel": "^1.9.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@stylistic/eslint-plugin": "^5.7.0",
        "@types/react": "^19.2.8",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.2",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-jsdoc": "^62.1.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.26",
        "eslint-plugin-sonarjs": "^3.0.5",
        "globals": "^17.0.0",
        "jiti": "^2.6.1",
        "react": "^19.2.3",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.0",
        "vite": "^7.3.1",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-typed-css-modules": "github:Peter-Schorn/vite-plugin-typed-css-modules#release"
    }
}
