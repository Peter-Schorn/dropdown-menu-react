{
    "name": "dropdown-menu",
    "version": "1.0.0",
    "description": "Components for creating a nested dropdown menu in react.",
    "license": "ISC",
    "author": "Peter Schorn",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "packageManager": "pnpm@10.28.1",
    "scripts": {
        "build": "pnpm run pre-build && tsc -b && vite build",
        "build:dev": "pnpm run pre-build && tsc -b && vite build --mode development",
        "dev": "pnpm run pre-build && concurrently -n tsc,vite 'tsc -b --watch' 'vite build --watch --mode development'",
        "pre-build": "pnpm run tcm && pnpm run copy-files",
        "preinstall": "only-allow pnpm",
        "lint": "eslint .",
        "clean": "rm -rf dist src-gen node_modules/.cache",
        "clean-build": "pnpm run clean && pnpm run build",
        "tcm": "tcm -p '**/*.module.css' -o src-gen src",
        "copy-files": "copyfiles -u 1 src/index.css.d.ts dist"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./loglevel": {
            "import": "./dist/loglevel.js",
            "types": "./dist/loglevel.d.ts"
        },
        "./index.css": "./dist/index.css"
    },
    "sideEffects": [
        "*.css"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Peter-Schorn/dropdown-menu-react.git"
    },
    "keywords": [
        "react"
    ],
    "peerDependencies": {
        "@types/react": ">=18.3.1",
        "loglevel": "^1.9.2",
        "react": ">=18.3.1",
        "react-dom": ">=18.3.1"
    },
    "peerDependenciesMeta": {
        "loglevel": {
            "optional": true
        },
        "@types/react": {
            "optional": true
        }
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@stylistic/eslint-plugin": "^5.7.0",
        "@types/node": "^25.1.0",
        "@types/react": "^19.2.10",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.2",
        "concurrently": "^9.2.1",
        "copyfiles": "^2.4.1",
        "eslint": "^9.39.2",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-jsdoc": "^62.1.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.26",
        "eslint-plugin-sonarjs": "^3.0.5",
        "globals": "^17.0.0",
        "jiti": "^2.6.1",
        "loglevel": "^1.9.2",
        "only-allow": "^1.2.2",
        "react": "^19.2.3",
        "react-dom": "^19.2.4",
        "typed-css-modules": "^0.9.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.0",
        "vite": "^7.3.1",
        "vite-plugin-typed-css-modules": "github:Peter-Schorn/vite-plugin-typed-css-modules#release"
    }
}
